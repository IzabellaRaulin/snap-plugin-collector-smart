{
  "version": 1,
  "schedule": {
    "type": "simple",
    "interval": "5s"
  },
  "workflow": {
    "collect": {
      "metrics": {
        "/intel/disk/smart/*": {}
      },
      "config": {
        "/intel/disk/smart": {
          "proc_path": "/proc",
          "dev_path": "/dev"
        }
      },
      "process": null,
      "publish": [
          {
              "plugin_name": "mock-file",
              "config": {
                  "file": "/tmp/published_smart.log"
              }
          }
      ]
    }
  }
}
